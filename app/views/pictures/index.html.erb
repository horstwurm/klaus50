
<div class="container-fluid">
    <%= link_to new_picture_path(:user_id => current_user.id), class:"btn btn-info btn-lg btn-block" do %>
       <i class="glyphicon glyphicon-camera"></i> Neues Photo
    <% end %>
    <br>
    <% @pictures.each do |p| %>
        <div class="col-md-4">
		  <div class="thumbnail">
                <% if current_user.id != p.user_id %>
    		        <% stars = Voting.where("picture_id=?",p.id).sum(:rating) %>
    	            <%= link_to new_voting_path(p.id, :user_id => current_user.id, :picture_id => p.id), class:"btn btn-info btn-lg btn-block" do %>
                       <i class="glyphicon glyphicon-thumbs-up"></i><span class="badge pull-right"><%= stars %></span> Bewerten
                    <% end %>
                <% end %>
		          <div class="caption">
			         <blockquote>
		        <% if !p.image_file_name %>
                   <%= link_to image_tag("s_anonym.jpg", :size => "300x300") %>
                <% else %>
                   <%= link_to (image_tag p.image(:medium)) %>
                <% end %>
                <h2><%= p.comment %></h2>
                <br>
                <% if p.user != nil %>
                  <address>
                  <%= p.user.name + " am " + p.created_at.strftime("%d.%m.%Y um %H:%M Uhr") %>
                  </address>
                <% end %>
              </blockquote>
                  <% if current_user.id == p.user_id %>
                      <%= link_to edit_picture_path(p.id), class:"btn btn-default btn-lg btn-block" do %>
                         <i class="glyphicon glyphicon-pencil"></i> Ändern
                      <% end %>
                      <%= link_to p, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default btn-lg btn-block" do %>
                         <i class="glyphicon glyphicon-pencil"></i> Löschen
                      <% end %>
                  <% end %>
            </div>
           </div>
         </div>
      <% end %>
</div>